---
import {HttpsLinks, Themes} from "../ts/enums";
import ThemeSelector from "./ThemeSelector";
---

<footer>
	<div class="footer-margin">
		<div class="flex-left">
			<a href={HttpsLinks.SourceCodeLink}>Source Code</a>
			<div class="seperator"></div>
			<p class="copyright">Copyright &copy; 2024 rhpidfyre</p>
		</div>
		<div class="flex-right">
			<ThemeSelector client:visible Icon={Themes.Dark}/>
			<div class="seperator"></div>
			<ThemeSelector client:visible Icon={Themes.Light}/>
		</div>
		<noscript>
			<style>
				.flex-right {
					display: none;
				}
			</style>
		</noscript>
	</div>
</footer>

<style lang="scss">
	@use "../../scss/variables.scss";
	$footer-x-padding: 20px;

	.copyright {
		font: {
			family: unset;
			size: .9em;
		};
		color: var(--copyright-color);
	}
	.flex-left {
		display: flex;
		align-items: center;
		gap: 5px;
	}
	.flex-right {
		display: flex;
		align-items: center;
		gap: 5px;
		margin-top: 3px;
		> .seperator {
			margin-bottom: 2px;
		}
	}
	.seperator {
		height: 15px;
		width: 1px;
		background-color: var(--copyright-color);
	}
	.footer-margin {
		display: flex;
		justify-content: space-between;
		margin: 10px;
		width: inherit
	}
	a {
		font-size: .9em;
	}
	footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		background-color: var(--color-secondary);
		border-top: 1px solid var(--color-primary-border);
		width: 100vw;
		height: variables.$bottombar-height;
		padding: 0
	}
</style>